    "axios": "^0.20.0",
    "babel-jest": "^29.3.1",
    "date-format": "^4.0.13",
    "mustache": "^4.0.1"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/jest": "^29.2.4",
    "@types/mockdate": "^3.0.0",
    "@types/nock": "^11.1.0",
    "@types/node": "^16.18.9",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
