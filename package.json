    "axios": "^0.20.0",
    "babel-jest": "^28.1.3",
    "date-format": "^4.0.13",
    "mustache": "^4.0.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/mockdate": "^2.0.0",
    "@types/nock": "^11.1.0",
    "@types/node": "^12.7.12",
    "@typescript-eslint/parser": "^2.8.0",
    "@zeit/ncc": "^0.20.5",
